root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 2

[*.pem]
insert_final_newline = false

[*.py]
indent_size = 2
